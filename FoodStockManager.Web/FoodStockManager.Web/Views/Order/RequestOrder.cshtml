@{
    ViewBag.Title = "Request Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/requestorder")
<style>
    .defaultBasket {
        color: black;
    }

    .activeBasket {
        color: red;
        font-size: large;
    }
</style>
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-purple">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Order Management</a></li>
                                <li class="active"><a>Request Order</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="color:purple"><i class="fa fa-barcode"></i> Request Order</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-sm-12">
                            <div id="rootwizard">
                                <ul>
                                    <li><a href="#tab1" data-toggle="tab">Select Product</a></li>
                                    <li><a href="#tab2" data-toggle="tab">Order Basket <span id="shoppingBasket" class="defaultBasket"><i class="fa fa-shopping-cart"></i></span></a></li>
                                    <li><a href="#tab3" data-toggle="tab">Confirm Order</a></li>
                                </ul>
                                <div class="well well-white" style="margin-top:15px;">
                                    <div class="tab-content">
                                        <div class="tab-pane" id="tab1">
                                            <table id="product" class="cell-border order-column" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Category</th>
                                                        <th>Product</th>
                                                        <th>Available Quantity</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>

                                                <tfoot>
                                                    <tr>
                                                        <th>Category</th>
                                                        <th>Product</th>
                                                        <th>Available Quantity</th>
                                                        <th></th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <div class="tab-pane" id="tab2">
                                            <table id="selectedorder" class="cell-border order-column" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Category</th>
                                                        <th>Product</th>
                                                        <th>Available Quantity</th>
                                                        <th>Requested Quantity</th>
                                                        <th></th>
                                                        <th></th>
                                                        <th>ID</th>
                                                    </tr>
                                                </thead>

                                                <tfoot>
                                                    <tr>
                                                        <th>Category</th>
                                                        <th>Product</th>
                                                        <th>Available Quantity</th>
                                                        <th>Requested Quantity</th>
                                                        <th></th>
                                                        <th></th>
                                                        <th>ID</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <div class="tab-pane" id="tab3">
                                            <div id="form-validation" class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <button type="button" id="addBtn" class="btn btn-purple" style="float:right;" onclick="confirmOrder()">Confirm Order</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <table id="order" class="cell-border order-column" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Requested Quantity</th>
                                                        <th>ID</th>
                                                    </tr>
                                                </thead>

                                                <tfoot>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Requested Quantity</th>
                                                        <th>ID</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</aside>







