
@{
    ViewBag.Title = "Update Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/updateproduct")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-green">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Product Management</a></li>
                                <li class="active"><a>Update Product</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="color:green"><i class="fa fa-edit"></i> Update Product</h3>
                    </div>
                    <div class="panel-body">
                        <form id="demo-form" data-parsley-validate="">
                            <div id="form-validation" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Enter Product Name" name="productName" id="productName" autofocus="" required="" data-parsley-required-message="Please enter product name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Quantity</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" placeholder="Enter Product Quantity" name="productQuantity" id="productQuantity" required="" data-parsley-required-message="Please enter product quantity" data-parsley-type="integer" data-parsley-min="1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Product Category</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="productCategory" required="" data-parsley-required-message="Please select product category"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="button" id="addBtn" class="btn btn-green" style="float:right;" onclick="updateProduct()">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer" style="text-align:right">
                        <a href="../Product/ViewProduct" title="View Product" style="color:green;font-weight:bold;"><i class="fa fa-mail-reply-all"></i> View Product</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>







